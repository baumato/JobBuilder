<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.tobbaumann.jobs.builder.examples.JobsExampleApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.tobbaumann.jobs.builder.examples.Perspective"
            id="org.tobbaumann.jobs.builder.examples.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Jobs"
            class="org.tobbaumann.jobs.builder.examples.JobExamplesView"
            id="org.tobbaumann.jobs.builder.examples.view">
      </view>
      <view
            category="org.eclipse.ui"
            class="org.eclipse.ui.ExtensionFactory:progressView"
            icon="icons/pview.png"
            id="org.eclipse.ui.views.ProgressView"
            name="Progress View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.tobbaumann.jobs.builder.examples.view"
               minimized="false"
               ratio="70"
               relationship="top"
               relative="org.eclipse.ui.views.ProgressView"
               standalone="true">
         </view>
         <view
               id="org.eclipse.ui.views.ProgressView"
               minimized="false"
               ratio="30"
               relationship="bottom"
               relative="org.tobbaumann.jobs.builder.examples.view"
               showTitle="true"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
